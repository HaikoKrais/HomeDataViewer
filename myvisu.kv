        size_hint: .1, .1
        pos_hint: {'top':1, 'left':1}
    Label:
        id: lbl1
        text: 'Vorhersage'
        size_hint: .8, .1
        pos_hint: {'top':1, 'center_x':.5}
    Label:
        id: lbl2
        text: root.ids.widget1.notification
        size_hint: 1, .1
        pos_hint: {'bottom':1, 'center_x':.5}
    WeatherWidget:
        id: widget1
        size_hint: 1, .8
        pos_hint: {'top':.9, 'left': 1}

